generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  email         String?   @unique
  emailVerified Boolean   @default(false)
  displayName   String?
  avatarUrl     String?
  role          String    @default("user")
  metadata      Json?
  passwordHash  String?
  lastLoginAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  oauthAccounts OAuthAccount[]
  sessions      Session[]
  slos          SloPolicy[]
  webhooks      WebhookConfig[]
}

model OAuthAccount {
  id                String    @id @default(uuid())
  provider          String
  providerAccountId String
  providerType      String?
  accessToken       String?
  refreshToken      String?
  scope             String?
  tokenExpiresAt    DateTime?
  profileJson       Json?
  userId            String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id               String   @id @default(uuid())
  userId           String
  refreshTokenHash String
  createdAt        DateTime @default(now())
  expiresAt        DateTime
  revoked          Boolean  @default(false)
  ip               String?
  userAgent        String?

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
}

model SloPolicy {
  id          String    @id @default(uuid())
  userId      String

  name        String
  description String?

  // Metric 타입: 'availability' | 'latency' | 'error_rate'
  metric      String

  // 목표값 (metric에 따라 의미가 다름)
  // availability/error_rate: 0~1 범위 (소수점)
  // latency: ms 단위 (정수)
  target      Float

  // SLI 값 (Service Level Indicator)
  sliValue    Float    @default(0)

  // 실제 다운타임 (분 단위)
  actualDowntimeMinutes Float @default(0)

  // 평가 기간 (분 단위: 60, 1440, 10080, 43200)
  totalMinutes Int      @default(1440)

  // 연결된 채널 (JSON 배열: ['slack', 'email'] 등)
  connectedChannels String[]  @default([])

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user              User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  webhookMappings   SloWebhookMapping[]

  @@index([userId])
  @@unique([userId, name])
}

model SloWebhookMapping {
  id          String    @id @default(uuid())
  sloId       String
  webhookId   String
  createdAt   DateTime  @default(now())

  slo         SloPolicy       @relation(fields: [sloId], references: [id], onDelete: Cascade)
  webhook     WebhookConfig   @relation(fields: [webhookId], references: [id], onDelete: Cascade)

  @@unique([sloId, webhookId])
  @@index([sloId])
  @@index([webhookId])
}

model WebhookConfig {
  id          String    @id @default(uuid())
  userId      String

  type        String
  name        String
  webhookUrl  String
  enabled     Boolean   @default(true)

  smtpHost    String?
  smtpPort    Int?
  smtpUser    String?
  smtpPassword String?
  smtpTls     Boolean?

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  lastTestedAt DateTime?

  user              User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  sloMappings       SloWebhookMapping[]

  @@index([userId])
}
